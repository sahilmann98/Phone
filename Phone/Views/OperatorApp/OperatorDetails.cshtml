@model IEnumerable<Phone.Models.tblOperator>

@{
    ViewBag.Title = "OperatorDetails";
}

<h2>Operator Details</h2>

<p>
    @Html.ActionLink("Add New Record ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HelpLine)
        </th>
        <th>Edit </th>
        <th>Delete </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HelpLine)
            </td>
            <td>
                <span class="btn btn-warning"> @Html.ActionLink("Edit", "Edit", new { id = item.id })</span>
            </td>

            <td>
                <span class="btn btn-warning"> @Html.ActionLink("Delete", "Delete", new { id = item.id }) </span>
            </td>
        </tr>
    }

</table>
